# Database Configuration
# Local development database URL (matches docker-compose.yml)
DATABASE_URL=postgres://postgres:postgres@localhost:25432/app

# Individual database connection parameters (alternative to DATABASE_URL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app
POSTGRES_HOST=localhost
POSTGRES_PORT=25432

# API Configuration
API_PORT=4000
WEB_PORT=3000

# Environment
NODE_ENV=development

# CORS Configuration
# Add your frontend URL here for CORS in local development
WEB_URL=http://localhost:3000

# API URL for web app
NEXT_PUBLIC_API_URL=http://localhost:4000/api
API_IMPLEMENTATION=fastify